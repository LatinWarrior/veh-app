{
    "compilerOptions": {
        "target": "es5",        
        "module": "umd",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": true,    
        "listFiles": true
    },
    "filesGlob": [
        "public/src/app/app.ts",
        "public/src/app/**/*.ts",
        "typings/index.d.ts",
        "!node_modules",
        "!typings/globals",
        "!typings/modules",
        "!public/dist",
        "!public/lib"
    ]    
}